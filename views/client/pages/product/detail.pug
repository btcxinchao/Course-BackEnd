extends ../../layouts/default.pug

block content
  if (products.title)
    h1.mb-4 #{products.title}

  if (products.price >=0)
    div.mb-4 Giá: 
      b #{products.price}$

  if (products.discountpercent >= 0)
    div.mb-4 Giảm giá: 
      b #{products.discountpercent}%

  if (products.stock >= 0)
    div.mb-4 Còn lại: 
      b #{products.stock}

  if (products.thumbnail)
    div.mb-4
      img(src=products.thumbnail style="width:100px")

  if (products.status ) 
    div.mb-4
      span Trạng thái: 
      if (products.status === "active")
        span.badge.badge-success Hoạt động
      else if (products.status === "inactive")
        span.badge.badge-danger Dừng hoạt động

  if (products.position)
    div.mb-4 Vị trí: 
      b #{products.position}

  if (products.description)
    div.mb-4 #{products.description}

  a(href=`${prefixAdmin}/product/edit/${products.id}` class="btn btn-sm btn-warning" ) Chỉnh Sửa
