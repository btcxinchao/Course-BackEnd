//- mixins/alert.pug
mixin alert-success(time)
  if messages && messages.success
    .message.info
      div.alert.alert-success(show-alert data-time=time)
        | #{messages.success}
        span.close-alert x

mixin alert-error(time)
  if messages && messages.error
    .message.info
      div.alert.alert-danger(show-alert data-time=time)
        | #{messages.error}
        span.close-alert x
